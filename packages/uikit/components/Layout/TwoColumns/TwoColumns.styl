.TwoColumns
  min-height 200px
  max-width 100vw
  display flex

  @media screen and (max-width: 1000px)
    flex-direction column-reverse


  &__content
    width 70%
    @media screen and (max-width: 1000px)
      width 100%

  &__aside
    width 30%
    display flex
    flex-direction column

    @media screen and (max-width: 1000px)
      width 100%