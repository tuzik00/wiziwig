.InlineToolbar
  border-radius 5px
  overflow hidden
  position absolute
  left 50%,
  top 50%
  transition top 250ms ease-in-out, left 250ms ease-in-out
  box-shadow 0 1px 6px -1px #000
  display none

  &_visible
    display inline-flex

  &__button
    color white
    width 50px
    height 30px
    display flex
    align-items center
    justify-content center
    background-color black
    cursor pointer
    transition background-color 250ms ease-in-out

    &:hover
      background-color #333

    &_active
      background-color #333