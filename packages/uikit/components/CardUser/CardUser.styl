.CardUser
  background-color #eee
  display flex
  padding 15px
  box-sizing border-box

  &__image
    display flex
    align-items center
    justify-content center

  &__img
    width 100px
    height 100px
    border-radius 50%

  &__info
    width 100%
    padding-left 30px

  &__section
    margin-bottom 15px