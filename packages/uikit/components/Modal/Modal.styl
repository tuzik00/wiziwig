.Overlay
  position fixed
  top 0
  left 0
  background-color #787878
  width 100vw
  height 100vh
  opacity .5

.Modal
  flex-direction column
  min-width 300px
  background white
  box-shadow 1px 5px 14px -5px #000
  padding 15px
  box-sizing border-box
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  border-radius 7px
  display none
  z-index 10

  &_open
    display flex

  &__header
    font-size 18px
    font-weight bold
    margin-bottom 30px

  &__body
    flex-grow 1

  &__actions
    display flex
    justify-content flex-end