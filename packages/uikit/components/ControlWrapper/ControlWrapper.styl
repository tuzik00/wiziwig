.ControlWrapper
  position relative

  &:hover
    & ^[0]__remove, & ^[0]__tools
      display flex

  &__remove, &__tools
    margin-left 5px
    display none
    cursor pointer
    transform translate(30%, -30%)
    width 25px
    height 25px
    border-radius 50%
    align-items center
    justify-content center
    background-color #fe7200
    transition background-color 250ms ease-in-out
    box-shadow 0 1px 6px -1px #000

    &:hover
      background-color rgba(254, 114, 0, 0.9)

  &__tools
    right 30px

  &__controls
    position absolute
    top 0
    right 0
    display flex
