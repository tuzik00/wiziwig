.Button
  padding 10px 15px
  border-radius 5px
  box-shadow none
  background-color white
  outline none
  border none
  cursor pointer
  transition background-color 250ms ease-in-out
  color black
  display flex
  align-items center
  justify-content center

  &_color
    &-orange
      background-color #fe7200
      color white

      &:hover
        background-color #f26e00

    &-green
      background-color #78b578
      color white

      &:hover
        background-color #6ca96c

     &-blue
      background-color #6d90ff
      color white

      &:hover
        background-color #6a84f0

  &_block
    width 100%

  &_center
    margin 0 auto

  &_right
    margin-left auto

  &_disabled
    opacity .5
    cursor default